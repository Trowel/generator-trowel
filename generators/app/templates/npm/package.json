{
  "name": "trowel-<%= props.name %>",
  "version": "0.0.0",
  "description": "<%= props.description %>",
  "scripts": {
    "test": "gulp",
    "dev": "gulp watch",
    "register": "bower register trowel-<%= props.name %> <%= props.url %>"
  },
  "repository": {
    "type": "git",
    "url": "git+<%= props.url %>.git"
  },
  "author": "<%= props.author_name %> <<%= props.author_mail %>>",
  "license": "MIT",
  "bugs": {
    "url": "<%= props.url %>/issues"
  },
  "files": [
    <% if (props.scss) { %>"<%= folders.src %>/scss/<%= props.name %>.scss",<% } %>
    <% if (props.twig) { %>"<%= folders.src %>/twig/<%= props.name %>.html.twig",<% } %>
    <% if (props.scss || props.css) { %>"<%= folders.dest %>/css/<%= props.name %>.css",<% } %>
    <% if (props.javascript) { %>"<%= folders.dest %>/javascript/<%= props.name %>.js",<% } %>
    "injector.json"
  ],
  "keywords": [
    <% if (props.scss) { %>"scss",<% } %>
    <% if (props.scss || props.css) { %>"css",<% } %>
    <% if (props.twig) { %>"twig",<% } %>
    <% if (props.twig) { %>"html",<% } %>
    <% if (props.javascript) { %>"javascript",<% } %>
    <% if (props.javascript) { %>"js",<% } %>
    "trowel",
    "trowel-<%= props.name %>",
    "<%= props.name %>"
  ],
  "homepage": "<%= props.url %>#readme"
}
